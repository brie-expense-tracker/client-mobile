# ---- Environment identity ----
# dev_sim     = running in iOS Simulator/Android Emulator
# dev_device  = running on a physical device on your LAN
# staging     = TestFlight pointing to your staging API
# production  = App Store / prod API
EXPO_PUBLIC_ENV=dev_sim

# ---- API endpoints ----
# For staging/prod, set this to your HTTPS API origin (NO trailing slash, NO /api).
EXPO_PUBLIC_API_URL=
# Local origins for development:
EXPO_PUBLIC_LOCAL_SIM_API_URL=http://localhost:3000
EXPO_PUBLIC_LOCAL_DEVICE_API_URL=http://192.168.49.133:3000
# If your server mounts the REST routes under a base path, set it once here.
EXPO_PUBLIC_API_BASE_PATH=/api
# Optional: client request timeout (ms)
EXPO_PUBLIC_API_TIMEOUT_MS=12000

# ---- Firebase Web (public) ----
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ---- Telemetry (optional; safe to commit as placeholders) ----
EXPO_PUBLIC_SENTRY_DSN=
EXPO_PUBLIC_POSTHOG_KEY=
EXPO_PUBLIC_POSTHOG_HOST=

# ---- Feature flags (optional) ----
EXPO_PUBLIC_FEATURE_PUSH=false
EXPO_PUBLIC_FEATURE_AI_INSIGHTS=true
EXPO_PUBLIC_AI_INSIGHTS=1
EXPO_PUBLIC_AI_INSIGHTS_PREVIEW=1